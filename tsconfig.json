{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true, // 开启sourcemap
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@locales/*": ["src/locales/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
